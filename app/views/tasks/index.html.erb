<h1>My Tasks</h1>

<% @tasks.each do |task| %>
  <h4> <%= link_to task.title, task_path(task) %> </h4>
  <p> <%= link_to "Remove task", task_path(task), method: :delete, class: "btn btn-danger" %> </p>
<% end %>

<%= link_to "New Task", new_task_path, class: "btn btn-primary" %>

